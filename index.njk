---
layout: base-layout.njk
pagination:
    data: collections.post
    size: 5
    reverse: true
    alias: posts
---
{% for post in posts %}
    <article>
        <h1>
            <a href="{{ url }}">{{ post.data.title }}</a>
        </h1>
        <time datetime="{{ post.date | dateIso }}" >{{ post.date | dateReadable }}</time>

        {% excerpt post %}

        <a href="{{ url }}" aria-label="Read more on {{ post.data.title }}">Read more</a>

    </article>
{% endfor %}