<article>
  <h1>{{ title }}</h1>
  <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
  {{ content | safe }}

  <div class="share-box">
    <a href="{{ 'https://twitter.com/share?text='+title+'&url=https://dnevend.github.io'+page.url }}"  target="_blank"><i>Share With Twitter</i></a>
  </div>
  
</article>